{
  "name": "backend",
  "version": "1.0.0",
  "description": "Infraestrutura de backend de administrador de finanzas personales",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "db:start": "docker start postgres_db backend-pgadmin-1",
    "db:stop": "docker stop postgres_db backend-pgadmin-1",
    "db:create": "docker compose -f docker-compose-db.yml up -d",
    "db:delete": "docker compose -f docker-compose-db.yml down",
    "migrations:generate": "sequelize-cli migration:generate --name",
    "migrations:run": "sequelize-cli db:migrate",
    "migrations:revert": "sequelize-cli db:migrate:undo",
    "migrations:delete": "sequelize-cli db:migrate:undo:all",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "@graphql-tools/merge": "^9.0.4",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "graphql": "^16.8.1",
    "graphql-passport": "^0.6.8",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.5",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3"
  },
  "devDependencies": {
    "@types/node": "^20.12.10",
    "eslint": "^9.2.0",
    "nodemon": "^3.1.0",
    "sequelize-cli": "^6.6.2"
  }
}
