{
  "name": "backend",
  "version": "1.0.0",
  "description": "Infraestrutura de backend de administrador de finanzas personales",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:dbup": "docker start postgres_db backend-pgadmin-1",
    "dev:dbdown": "docker stop postgres_db backend-pgadmin-1",
    "dev:dbupinitial": "docker compose -f docker-compose-db.yml up -d",
    "dev:dbdownterminal": "docker compose -f docker-compose-db.yml down",
    "test": "echo \"Error: no test specified\" && exit 1",
    "migrations:generate": "sequelize-cli migration:generate --name",
    "migrations:run": "sequelize-cli db:migrate",
    "migrations:revert": "sequelize-cli db:migrate:undo",
    "migrations:delete": "sequelize-cli db:migrate:undo:all"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "dotenv": "^16.4.5",
    "graphql": "^16.8.1",
    "pg": "^8.11.5",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3"
  },
  "devDependencies": {
    "@types/node": "^20.12.10",
    "eslint": "^9.2.0",
    "nodemon": "^3.1.0",
    "sequelize-cli": "^6.6.2"
  }
}
